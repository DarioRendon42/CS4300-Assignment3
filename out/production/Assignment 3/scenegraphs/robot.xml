<scene>
    <instance name="cylinder" path="models/cylinder.obj"></instance>
    <instance name="box" path="models/box.obj"></instance>
    <instance name="claw" path="models/claw.obj"></instance>
    <transform>
        <set>
            <translate>0 2 0</translate>
            <scale>10 10 10</scale>
        </set>
        <group name="robot">
            <transform name = "whole-robot">
                <set>
                    <scale>1 1 1</scale>
                </set>
                <group>
                    <group name="base">
                        <transform name="base-mesh">
                            <set>
                                <scale>3 1 3</scale>
                            </set>
                            <object instanceof="cylinder">
                                <material>
                                    <color>.7 .7 .7</color>
                                </material>
                            </object>
                        </transform>
                    </group>
                    <group name="arms">
                        <transform name="armLeft">
                            <set>
                                <translate>1 0 0</translate>
                            </set>
                            <group name="arm">
                                <transform name="pivot">
                                    <set>
                                        <translate>1 1 0</translate>
                                        <rotate>15 0 1 0</rotate>
                                    </set>
                                    <group>
                                        <transform name="pivot-mesh">
                                            <set>
                                                <scale>1.5 1.5 1.5</scale>
                                            </set>
                                            <object instanceof="box">
                                                <material>
                                                    <color>.8 .8 0</color>
                                                </material>
                                            </object>
                                        </transform>
                                        <transform name="armLower">
                                            <set>
                                                <rotate>30 1 0 0</rotate>
                                            </set>
                                            <group>
                                                <transform name="armLower-mesh">
                                                    <set>
                                                        <scale>.4 4 .4</scale>
                                                    </set>
                                                    <object instanceof="cylinder">
                                                        <material>
                                                            <color>1 .5 0</color>
                                                        </material>
                                                    </object>
                                                </transform>
                                                <transform name="armUpper">
                                                    <set>
                                                        <translate>0 4 0</translate>
                                                        <rotate>90 1 0 0</rotate>
                                                    </set>
                                                    <group>
                                                        <transform name="armUpper-mesh">
                                                            <set>
                                                                <scale>.4 4 .4</scale>
                                                            </set>
                                                            <object instanceof="cylinder">
                                                                <material>
                                                                    <color>.75 0 1</color>
                                                                </material>
                                                            </object>
                                                        </transform>
                                                        <transform name="claws">
                                                            <set>
                                                                <translate>0 4 0</translate>
                                                            </set>
                                                            <group>
                                                                <transform name="claw1-mesh">
                                                                    <set>\
                                                                        <scale>.3 .3 .3</scale>
                                                                        <rotate>-15 0 0 1</rotate>
                                                                    </set>
                                                                    <object instanceof="claw">
                                                                        <material>
                                                                            <color>1 0 0</color>
                                                                        </material>
                                                                    </object>
                                                                </transform>
                                                                <transform name="claw2-mesh">
                                                                    <set>
                                                                        <scale>-.3 .3 .3</scale>
                                                                        <rotate>-15 0 0 1</rotate>
                                                                    </set>
                                                                    <object instanceof="claw">
                                                                        <material>
                                                                            <color>1 0 0</color>
                                                                        </material>
                                                                    </object>
                                                                </transform>
                                                            </group>
                                                        </transform>
                                                    </group>
                                                </transform>
                                            </group>
                                        </transform>
                                    </group>
                                </transform>
                            </group>
                        </transform>
                        <transform name="arm-right">
                            <set>
                                <translate>-1 0 0</translate>
                                <scale>-1 1 1</scale>
                            </set>
                            <group name="arm-r">
                                <transform name="pivot-r">
                                    <set>
                                        <translate>1 1 0</translate>
                                        <rotate>15 0 1 0</rotate>
                                    </set>
                                    <group>
                                        <transform name="pivot-mesh-r">
                                            <set>
                                                <scale>1.5 1.5 1.5</scale>
                                            </set>
                                            <object instanceof="box">
                                                <material>
                                                    <color>.8 .8 0</color>
                                                </material>
                                            </object>
                                        </transform>
                                        <transform name="armLower-r">
                                            <set>
                                                <rotate>30 1 0 0</rotate>
                                            </set>
                                            <group>
                                                <transform name="armLower-mesh-r">
                                                    <set>
                                                        <scale>.4 4 .4</scale>
                                                    </set>
                                                    <object instanceof="cylinder">
                                                        <material>
                                                            <color>1 .5 0</color>
                                                        </material>
                                                    </object>
                                                </transform>
                                                <transform name="armUpper-r">
                                                    <set>
                                                        <translate>0 4 0</translate>
                                                        <rotate>90 1 0 0</rotate>
                                                    </set>
                                                    <group>
                                                        <transform name="armUpper-mesh-r">
                                                            <set>
                                                                <scale>.4 4 .4</scale>
                                                            </set>
                                                            <object instanceof="cylinder">
                                                                <material>
                                                                    <color>.75 0 1</color>
                                                                </material>
                                                            </object>
                                                        </transform>
                                                        <transform name="claws-r">
                                                            <set>
                                                                <translate>0 4 0</translate>
                                                            </set>
                                                            <group>
                                                                <transform name="claw1-mesh-r">
                                                                    <set>\
                                                                        <scale>.3 .3 .3</scale>
                                                                        <rotate>-15 0 0 1</rotate>
                                                                    </set>
                                                                    <object instanceof="claw">
                                                                        <material>
                                                                            <color>1 0 0</color>
                                                                        </material>
                                                                    </object>
                                                                </transform>
                                                                <transform name="claw2-mesh-r">
                                                                    <set>
                                                                        <scale>-.3 .3 .3</scale>
                                                                        <rotate>-15 0 0 1</rotate>
                                                                    </set>
                                                                    <object instanceof="claw">
                                                                        <material>
                                                                            <color>1 0 0</color>
                                                                        </material>
                                                                    </object>
                                                                </transform>
                                                            </group>
                                                        </transform>
                                                    </group>
                                                </transform>
                                            </group>
                                        </transform>
                                    </group>
                                </transform>
                            </group>
                        </transform>
                    </group>
                </group>
            </transform>
        </group>
    </transform>
</scene>